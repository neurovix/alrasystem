{
  "expo": {
    "name": "ALRA PLASTIC",
    "slug": "alra",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon_default_logo.png",
    "scheme": "alra",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.fernando.nrv.alra",
      "infoPlist": {
        "NSCameraUsageDescription": "La aplicación necesita acceder a la cámara para escanear códigos QR y tomar fotos de diferentes procesos.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#ffffff",
        "foregroundImage": "./assets/images/icon_default_logo.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ],
      "package": "com.fernando.nrv.alra"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/icon_default_logo.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Permitir que la aplicación use la cámara para escanear códigos QR y tomar fotos de diferentes procesos"
        }
      ],
      "expo-web-browser",
      "expo-font"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "a54b4191-6e6f-4972-a155-8a60e3092f89"
      }
    }
  }
}
